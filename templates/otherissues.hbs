<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/" style="color:orange;">Infrastructure Maintenance and Reporting Tool</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                <a class="nav-item nav-link active" href="/" >Home <span class="sr-only">(current)</span></a>
                </div>
            </div>
        </nav><br/>

        <h1 style="margin:0,auto; text-align:center; border:2px solid black;">Other Open Issues</h1><br/>

        <div class="container" style="background:lightblue; padding: 15px;">
          <div class="row">
              <div class="col text-center">
                <form action="/filter" method="post">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Filter by Category</label>
                        </div>
                        <select class="custom-select" id="inputGroupSelect01" name="category" required multiple>
                        <option selected>Choose...</option>
                        <option value="Roads">Roads</option>
                        <option value="Electricity">Electricity</option>
                        <option value="NaturalGas">Natural Gas</option>
                        <option value="CommunicationNetworks">Communication Networks</option>
                        <option value="Schools">Schools</option>
                        <option value="Airports">Airports</option>
                        <option value="Rail">Rail</option>
                        <option value="Water">Water</option>
                        <option value="Wastewater">Wastewater</option>
                        <option value="Parks">Parks</option>
                        <option value="Levees">Levees</option>
                        <option value="Dams">Dams</option>
                        <option value="Waterways">Waterways</option>
                        <option value="InlandPorts">Inland Ports</option>
                        <option value="SolidWaste">Solid Waste</option>
                        <option value="HazardousSolidWaste">Hazardous Solid Waste</option>
                        </select>
                    </div>
                    <input type="submit" value="Filter">
                </form>
                </div>
            </div>
        </div>
        <br />
        <br />
        {{#each this}}
            {{#if category}}
            <h3>Issue ID: {{id}}</h3>
            Submitter: {{submitter}}<br>
            Category: {{category}}<br>
            Urgency: {{urgency}}<br>

            City: {{city}}<br>
            State: {{state}}<br>
            Zipcode: {{zipcode}}<br>
            Description: {{description}}<br>
            <form action="/addwatch" method="post">
              <button type="submit" name="id" value="{{id}}">Add to Watchlist</button>
            </form>
            {{/if}}
            {{/each}}
    </body>
</html>
