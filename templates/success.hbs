<html>
    <head>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script>
        function updatePassword() {
            var x = document.getElementById("pwReset")
            x.style.display = "block"
        }
        </script>
    </head>
    <body style="background-color:lightseagreen;">

      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/" style="color:bisque;">IMR Tool</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/" >Home <span class="sr-only">(current)</span></a>
          </div>
        </div>
      </nav><br/>

      <div class="container">
        <div class="row">
          <div class="col text-center">



            <h1>Hello, {{name}}</h1><br />
            <!-- Add issue from sign in success -->
            <div class="container" style="background-color:darkslategray;">
              <br />
              <div class="container">
                <a class="btn btn-success btn-lg btn-block" href="/addissue" style="text-decoration: none">Submit Issue</a><br>
                <a class="btn btn-success btn-lg btn-block" href="/userissues" style="text-decoration: none">View My Issues</a><br>
                <a class="btn btn-success btn-lg btn-block" href="/otherissues" style="text-decoration: none">View Other Issues</a><br>
                <a class="btn btn-success btn-lg btn-block" href="/watchlist" style="text-decoration: none">Watchlist</a><br><br><br /><br />
              </div>
              <a class="btn btn-danger btn-lg btn-block" onclick="updatePassword()">Reset Password</a><br>
              <a class="btn btn-primary btn-lg btn-block" href="/logout" style="text-decoration: none">Log Out</a><br><br>

              <form id="pwReset" action="/resetPassword" method="post" style="display: none">
                  Current Password:<br>
                  <input type="password" name="oldPW"><br>
                  New Password:<br>
                  <input type="password" name="newPW"><br><br>
                  <input type="text" name="userName" value="{{login}}" style="display:none">
                  <br><br>
                  <input type="submit" value="Reset">
              </form>
            </div>
          </div>
        </div>
      </div>
      <br />
      <br />

      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>

</html>
